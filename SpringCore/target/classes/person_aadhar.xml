<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	    <bean class="com.jspider.SpringCore.entity.Person" name="person">
	     <property name="id" value="1"></property>
	     <property name="name" value="Ram"></property>
	     <property name="email" value="ram@gmail.com"></property>
	     <property name="mobile" value="8967546734"></property>
	     <property name="Aadhar" ref="aadhar"></property>
	    
	    </bean>
	    
	    <bean class="com.jspider.SpringCore.entity.Aadhar" name="aadhar">
	    
	      <property name="id" value="1"></property>
	      <property name="aadharNumber" value="986754326798"></property>
	    
	    </bean>
</beans>