<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean class="com.jspider.SpringCore.entity.Company" name="company">
		<property name="id" value="1"></property>
		<property name="name" value="Tata"></property>
		<property name="loc" value="Pune"></property>
		<property name="employees">
			<list>
				<bean class="com.jspider.SpringCore.entity.Employee" name="employee1">
					<property name="id" value="1"></property>
					<property name="name" value="Rohit"></property>
					<property name="email" value="rohit@gmail.com"></property>
				</bean>
				<bean class="com.jspider.SpringCore.entity.Employee" name="employee2">
					<property name="id" value="2"></property>
					<property name="name" value="Mohit"></property>
					<property name="email" value="mohit@gmail.com"></property>
				</bean>

			</list>

		</property>


	</bean>
</beans>